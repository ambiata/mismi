#!/bin/sh -exu

PROJECT=${1:?"'ci.common' requires a single argument, specifying the mismi sub-project."}

export LC_COLLATE=en_US.UTF-8
export LANG=en_US.UTF-8

git submodule init
git submodule sync
git submodule update

cd $PROJECT

./cabal update || exit $?
./cabal build || exit $?
./cabal test  --log=/dev/stdout || exit $?
